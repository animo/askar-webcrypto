{
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "build",
    "target": "es2016",
    "lib": ["ES2021"],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["build"]
}
